<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/getLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_location_search"
        android:layout_alignParentTop="true"
        android:onClick="getLocationButton"
   		android:layout_alignParentLeft="true"/>

    <ImageButton
        android:id="@+id/listViewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:src="@drawable/icon_list_view"
        android:layout_alignParentTop="true"
        android:onClick="listViewButton"
   		android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listViewButton"
        android:layout_centerHorizontal="true"
        android:onClick="changeCampusButton" />

</RelativeLayout>